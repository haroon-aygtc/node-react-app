# Server Configuration
PORT=5000
NODE_ENV=development

# Authentication
JWT_SECRET=your_development_secret_key_change_in_production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Database
DB_URL=mysql://root:@localhost:3306/node_react_app

# CORS
# In development, we use regex patterns to allow multiple origins
# No need to specify CORS_ORIGIN in development
# CORS_ORIGIN=

# Production origin (used in production environment)
CORS_PRODUCTION_ORIGIN=https://yourdomain.com
