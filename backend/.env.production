# Server Configuration
PORT=5000
NODE_ENV=production

# Authentication
JWT_SECRET=replace_with_strong_production_secret_key
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Database
DB_URL=mysql://production_user:production_password@production_host:3306/production_db

# CORS
# For multiple origins, separate with commas (no spaces)
CORS_ORIGIN=https://your-production-domain.com
